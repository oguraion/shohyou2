%main.main
  .signup-panel
    %p.signup-panel__title
      ログイン
    .signup-panel__body
      .signup-panel__body__form
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field
            %label{for: "email", class: "label"} メールアドレス 
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", value: "test@gmail.com", class: "form-input"
          .field
            %label{for: "password", class: "label"} パスワード
            %br/
            = f.password_field :password, autocomplete: "current-password", value: 123456, class: "form-input"
          - if devise_mapping.rememberable?
            .field
              = f.check_box :remember_me
              = f.label :アカウントを記録する, class: "remember"
          .actions
            = f.submit "Log in"
